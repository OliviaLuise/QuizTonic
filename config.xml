<?xml version="1.0" encoding="UTF-8" ?>

<widget xmlns = "http://www.w3.org/ns/widgets"
        xmlns:gap = "http://phonegap.com/ns/1.0"
        id = "at.quiztonic"
        versionCode = "1"
        version = "1.0.0" >

        <name> Quiz Tonic </name>

        <description>A fun app where you can simultaneously proove your smarts and your alcohol tolerance! </description>
        <author href="" email = "olivia-herzog@hotmail.com"> Olivia Herzog </author>

        <preference name = "orientation" value = "landscape" />
        <preference name = "fullscreen" value = "false" />
        <preference name="DisallowOverscroll" value="true" />
        <preference name="android-minSdkVersion" value="14" />

        <content src="index.html" />

        <plugin name="cordova-plugin-whitelist" source="npm" spec="~1.2.1" />

        <platform name="android">
            <icon density="xxxhdpi" src="www/icon.png" />
        </platform>


        <access origin="*" />
        <allow-intent href="http://*/*" />
        <allow-intent href="https://*/*" />
        <allow-intent href="tel:*" />
        <allow-intent href="sms:*" />
        <allow-intent href="mailto:*" />
</widget>
